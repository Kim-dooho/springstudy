package com.min.app04.controller;

import java.text.SimpleDateFormat;
import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Date;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ResponseBody;

import com.min.app04.dto.BookDTO;
import com.min.app04.service.BookService;

// @Controller
public class BookController1 {

  private BookService contactService;

  @Autowired
  public BookController1(BookService contactService) {
    super();
    this.contactService = contactService;
  }
  
  /* @GetMapping    : @RequestMapping(method = RequestMethod.GET)    - 조회용
   * @PostMapping   : @RequestMapping(method = RequestMethod.POST)   - 삽입용
   * @PutMapping    : @RequestMapping(method = RequestMethod.PUT)    - 수정용 (POST 처럼 동작)
   * @DeleteMapping : @RequestMapping(method = RequestMethod.DELETE) - 삭제용 (GET 처럼 동작)  */
  
  /* @ResponseBody
   *     메소드의 반환 값은 View 가 아니라 응답 데이터이다. */
  @ResponseBody
  
  /* value = {"/api/contacts", "/api/contacts.json"}
   *         설명) "/api/contacts"와 "/api/contacts.json" 을 동일한 요청으로 본다.
   * produces = "application/json"
   *            설명) 응답 데이터 타입은 JSON 이다. */
  @GetMapping(value = {"/api/contacts", "/api/contacts.json"}, produces = "application/json")
  public Map<String, Object> listJson() {
    // {"contacts": [{"contactNo": 1, "title": "소나기", "author": "황순원"}, {}, {}, {}, {}]}
    return Map.of("contacts", contactService.getBookList());
  }
  
  @ResponseBody
  /* produces = "application/xml"
   *            설명) 응답 데이터 타입은 XML 이다. */
  @GetMapping(value = "/api/contacts.xml", produces = "application/xml")
  public Map<String, Object> listXml() {
    // <List><contact><contactNo>1</contactNo><title>소나기</title><author>황순원</author></contact>...</List>
    return Map.of("contact", contactService.getBookList());
  }
  
  @ResponseBody
  @GetMapping(value = {"/api/contacts/{contactNo}", "/api/contacts.json/{contactNo}"}, produces = "application/json")
  public Map<String, Object> detailJson(@PathVariable(name = "contactNo") int contactNo) {
    // {"contact":{"contactNo":1,"title":"소나기","author":"황순원"}}
    return Map.of("contact", contactService.getBookByNo(contactNo));
  }
  
  @ResponseBody
  @GetMapping(value = "/api/contacts.xml/{contactNo}", produces = "application/xml")
  public Map<String, Object> detailXml(@PathVariable int contactNo) {  // @PathVariable 의 name 생략 가능
    // <Map><contact><contactNo>1</contactNo><title>소나기</title><author>황순원</author></contact></Map>
    return Map.of("contact", contactService.getBookByNo(contactNo));
  }
  
  @ResponseBody
  @PostMapping(value = "/api/contacts", produces = "application/json")
                                    /* @RequestBody
                                     *     요청 본문(request body)에 저장된 데이터(JSON 데이터)를 꺼내서 BookDTO contact 에 저장하시오. 
                                     * 요청 본문에 저장된 JSON 데이터 예시
                                     *     {
                                     *         "contactNo": 1,
                                     *         "title": "어린왕자",
                                     *         "author": "생텍쥐베리"
                                     *     }                            */
  public Map<String, Object> insertBook(@RequestBody BookDTO contact) {
    // {"isSuccess": true, "inserted": "2024-06-28"}
    return Map.of("isSuccess", contactService.insertBook(contact) == 1
                , "inserted", DateTimeFormatter.ofPattern("yyyy-MM-dd").format(LocalDate.now()));
  }
  
  @ResponseBody
  @PutMapping(value = "/api/contacts", produces = "application/json")
  public Map<String, Object> updateBook(@RequestBody BookDTO contact) {
    // {"isSuccess": true, "updated": "2024-06-28"}
    return Map.of("isSuccess", contactService.updateBook(contact) == 1
                , "updated", new SimpleDateFormat("yyyy-MM-dd").format(System.currentTimeMillis()));
  }
  
  @ResponseBody
  @DeleteMapping(value = "/api/contacts/{contactNo}", produces = "application/json")
  public Map<String, Object> deleteBook(@PathVariable int contactNo) {
    // {"isSuccess": true, "deleted": "2024-06-28"}
    return Map.of("isSuccess", contactService.deleteBook(contactNo) == 1
                , "deleted", new SimpleDateFormat("y-MM-dd").format(new Date()));
  }
  
}