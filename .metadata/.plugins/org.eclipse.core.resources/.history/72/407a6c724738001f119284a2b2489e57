  <script>
    // 학생 삭제 기능
    function deleteContact(contactNo) {
      if (confirm('정말 삭제하시겠습니까?')) {
        location.href = '${contextPath}/delete.do?contactNo=' + contactNo;
      }
    }
  </script>
