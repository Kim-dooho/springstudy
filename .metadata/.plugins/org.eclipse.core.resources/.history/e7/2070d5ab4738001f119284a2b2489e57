<c:set var="contextPath" value="<%=request.getContextPath()%>"/>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Insert title here</title>
</head>
<body>
  <div>
    <div>순번: <input value="${contact.contactNo}" /></div>
    <div>이름: <input value="${contact.name}" /></div>
    <div>이메일: <input value="${contact.email}" /></div>
    <div>전화번호: <input value="${contact.mobile}" /></div>
  </div>
  <div>
    <a href="${contextPath}/edit.do?contactNo=${contact.contactNo}">수정하기</a>
    <a href="${contextPath}/list.do">목록보기</a>
    <a href="javascript:deleteContact(${contact.stu_no})">삭제</a>
  </div>
  <script>
    // 학생 삭제 기능
    function deleteContact(contactNo) {
      if (confirm('정말 삭제하시겠습니까?')) {
        location.href = '${contextPath}/delete.do?contactNo=' + contactNo;
      }
    }
  </script>
