package com.min.app04.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.min.app04.dao.BookDAO;
import com.min.app04.dto.BookDTO;

@Service
public class BookServiceImpl implements BookService {

  private BookDAO contactDAO;
  
  @Autowired  
  public BookServiceImpl(BookDAO contactDAO) {
    super();
    this.contactDAO = contactDAO;
  }

  @Override
  public List<BookDTO> getBookList() {
    return contactDAO.getBookList();
  }

  @Override
  public BookDTO getBookByNo(int contactNo) {
    return contactDAO.getBookByNo(contactNo);
  }

  @Override
  public int insertBook(BookDTO contact) {
    return contactDAO.insertBook(contact);
  }

  @Override
  public int updateBook(BookDTO contact) {
    return contactDAO.updateBook(contact);
  }

  @Override
  public int deleteBook(int contactNo) {
    return contactDAO.deleteBook(contactNo);
  }

}